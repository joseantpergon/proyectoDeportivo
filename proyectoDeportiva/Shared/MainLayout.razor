@inherits LayoutComponentBase

<PageTitle>proyectoDeportiva</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>
    <NavMenu ToggleNavMenu="ToggleNavMenu" />
   <MudDrawer @bind-Open="@IsNavMenuOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">My App</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Href="" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/pistas" Icon="@Icons.Material.Filled.EditCalendar">Reservas</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/users" Icon="@Icons.Material.Filled.AccessibilityNew">Usuarios</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent >
        @Body
    </MudMainContent>
</MudLayout>
@code {
    private bool IsNavMenuOpen { get; set; }

    private void ToggleNavMenu()
    {
        IsNavMenuOpen = !IsNavMenuOpen;
    }
}